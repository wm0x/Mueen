generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  phone         String?  @unique
  password_hash String
  createdAt     DateTime @default(now())
  role          String   @default("customer")

  orders        Order[]
}

